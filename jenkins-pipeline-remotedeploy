pipeline {
    agent any
    environment {
    PATH = "/opt/apache-maven-3.9.3/bin:${PATH}"
     }
    stages {
        stage('Checkout') {
            steps {
                // Checkout the source code from your version control system
                // For example, using Git:
                git 'https://github.com/cbasavak/java-application.git'
            }
        }
        
        stage('Build') {
            steps {
                // Build the project using Maven
                sh 'mvn clean package'
            }
        }
        stage('Deployment') {
            steps {
                // Trigger deployment from Nexus repository to Tomcat server
                // Replace `your-artifact` and `your-version` with the actual artifact name and version
               // deploy adapters: [tomcat9(credentialsId: 'tomcat-user', path: '', url: 'http://54.91.87.176:8080/')], contextPath: null, war: '**/*.war'
            }
        }
    }
}
